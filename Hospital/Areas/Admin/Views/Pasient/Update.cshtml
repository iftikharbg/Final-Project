@model PasientUpdateViewModel

<form asp-controller="Pasient" asp-action="Update" method="post" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Name">

    </div>
    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" id="Surname" placeholder="Surname">
    </div>
    <div class="form-group">
        <label for="BirthDate">Birth Date</label>
        <input type="date" asp-for="BirthDate" class="form-control" id="BirthDate" placeholder="BirthDate">
    </div>
    <div class="form-group">
        <label for="Tin">Tin</label>
        <input type="text" asp-for="Tin" class="form-control" id="Tin" placeholder="Tin">
    </div>
    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" id="Address" placeholder="Address">
    </div>
    <div class="form-group">
        <label for="BloodGroup">Blood Group</label>
        <input type="text" asp-for="BloodGroup" class="form-control" id="BloodGroup" placeholder="BloodGroup">
    </div>
    <div class="form-group">
        <label for="PassportSerial">Passport Serial</label>
        <input type="text" asp-for="PassportSerial" class="form-control" id="PassportSerial" placeholder="PassportSerial">
    </div>
    <div class="form-group">
        <label for="Telephone">Telephone</label>
        <input type="tel" asp-for="Telephone" class="form-control" id="Telephone" placeholder="Telephone">
    </div>
    
    <div class="form-group">
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>
