
@model List<Pasient>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>id</th>


            <th>Name</th>
            <th>Surname</th>
            <th>Tin</th>
            <th>Address</th>
            <th>BloodGroup</th>
            <th>PassportSerial</th>
            <th>Telephone</th>


            <th>Age</th>
            <th>Gender</th>

            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id

            </td>

            <td>
                @item.Name

            </td>
            <td>
                @item.Surname

            </td>
            <td>
                @item.Tin

            </td>
            <td>
                @item.Address

            </td>
            <td>
                @item.BloodGroup

            </td>
            <td>
                @item.PassportSerial

            </td>
            <td>
                @item.Telephone

            </td>
            <td>

                @Html.Raw(@DateTime.Now.Year - @item.BirthDate.Year)
            </td>
            <td>
                @item.Gender

            </td>
           

            <td>
                <a asp-action="Update" asp-controller="Pasient" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Pasient" class="btn btn-danger">Delete</a>
               


            </td>
        </tr>
        }
    </tbody>
</table>

