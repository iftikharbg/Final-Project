@model List<User>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>id</th>
                <th>Image</th>

                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>

                <th>Age</th>
                <th>Gender</th>
                <th>Job Start</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Id

                </td>
                <td>
                    @item.Image

                </td>
                <td>
                    @item.Name

                </td>
                <td>
                    @item.Surname

                </td>
                <td>
                    @item.Email

                </td>
                <td>
                  
                    @Html.Raw(@DateTime.Now.Year- @item.BirthDate.Year)
                </td>
                <td>
                    @item.Gender

                </td>
                <td>
                    @item.JobStart

                </td>

                <td>
                    <a asp-action="Update" asp-controller="User" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="User" class="btn btn-danger">Delete</a>

                </td>
            </tr>
            }
        </tbody>
    </table>


